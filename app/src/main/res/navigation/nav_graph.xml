<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.myapp.fragments.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />
    <fragment
        android:id="@+id/inscriptionFragment"
        android:name="com.example.myapp.fragments.InscriptionFragment"
        android:label="fragment_inscription"
        tools:layout="@layout/fragment_inscription" >
        <action
            android:id="@+id/action_inscriptionFragment_to_accueilFragment"
            app:destination="@id/accueilFragment" />
        <action
            android:id="@+id/action_inscriptionFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.myapp.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_accueilFragment"
            app:destination="@id/accueilFragment" />
        <action
            android:id="@+id/action_loginFragment_to_inscriptionFragment"
            app:destination="@id/inscriptionFragment" />
    </fragment>
    <fragment
        android:id="@+id/accueilFragment"
        android:name="com.example.myapp.fragments.AccueilFragment"
        android:label="fragment_accueil"
        tools:layout="@layout/fragment_accueil" >
        <action
            android:id="@+id/action_accueilFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
</navigation>